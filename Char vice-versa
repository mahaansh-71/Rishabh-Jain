#include<stdio.h>
int main()
{
    char ch;
    printf("Enter the alpha ");
    scanf("%c",&ch);
    if(ch>='A'&&ch<='Z')
    {
        ch=ch+32;
        printf("The alpha is reversed %c",ch);
    }
    else if(ch>='a'&&ch<='z')
    { 
        ch=ch-32;
        printf("The alpha is reversed %c",ch);
    }
    return 0;
}
