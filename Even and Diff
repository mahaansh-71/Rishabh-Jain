#include<stdio.h>
int main()
{
    int a,b,diff;
    printf("Enter Two Numbers ");
    scanf("%d%d",&a,&b);
    if(a>b)
    {
        if(a%2==0)
        {
            printf("%d\n",a);
            diff=a-b;
            printf("Diff = %d",diff);
        }
    }
    else if(b>a)
    {
        if(b%2==0)
        {
            printf("%d\n",b);
            diff=b-a;
            printf("Diff = %d",diff);
        }
    }
    
    return 0;
}
